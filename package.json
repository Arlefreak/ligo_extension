{
  "name": "ligo.afk",
  "version": "1.0.0",
  "description": "ligo Browser Extension",
  "main": "js/script.js",
  "scripts": {
    "start": "web-ext run -s src --browser-console -p default",
    "test": "eslint js/* && web-ext lint -s src",
    "build:chrome": "crx pack src -o build/ligo.crx && web-ext build -s src -a build",
    "build:fox": "dotenv web-ext sign -s src --api-key=$WEB_EXT_API_KEY --api-secret=$WEB_EXT_API_SECRET --id=$WEB_EXT_ID"
  },
  "repository": "git+https://github.com/Arlefreak/ligo_extension.git",
  "keywords": [
    "extension",
    "arlefreak",
    "afk",
    "ligo",
    "link"
  ],
  "author": "AFK",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Arlefreak/ligo_extension/issues"
  },
  "homepage": "https://github.com/Arlefreak/ligo_extension#readme",
  "devDependencies": {
    "archiver": "^1.3.0",
    "crx": "^3.2.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0"
  },
  "dependencies": {
    "archiver": "^1.3.0",
    "dotenv": "^4.0.0",
    "is": "^3.2.1"
  }
}
